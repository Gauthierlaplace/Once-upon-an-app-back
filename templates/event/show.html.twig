{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class="text-center">
			{% block title %}
				{{ event.title }}
			{% endblock %}
		</h1>
		<div class="row">
			<div class="col-md-8 offset-md-2 container">
				<div class="card">
					<div class="card-body">
						<table class="table">
							<tbody>
								<tr>
									<th>Id</th>
									<td>{{ event.id }}</td>
								</tr>
								<tr>
									<th>Titre</th>
									<td>{{ event.title }}</td>
								</tr>
								<tr>
									<th>Biome</th>
									{% if event.biome.id %}
										<td>{{ event.biome.name }}</td>
									{% else %}
										<td></td>
									{% endif %}
								</tr>
								<tr>
									<th>Type</th>
									<td>{{ event.eventType.name }}</td>
								</tr>

								<tr>
									<th>Description</th>
									<td>{{ event.description }}</td>
								</tr>
								<tr>
									<th>Opening</th>
									<td>{{ event.opening }}</td>
								</tr>
								<tr>
									<th>Image</th>
									<td>
										{% if event.picture %}
											<img class="img-fluid event-img" src="{{ asset(event.picture) }}" alt="{{ 'image de ' ~ event.title }}">{{ event.picture }}
										{% endif %}
									</td>
								</tr>
								<tr>
									<th>Npc</th>
									<td>
										{% if npcs %}
											{% for npc in npcs %}
												{{npc.name}}
												{% if npc.picture %}
													<br>
													<img class="img-fluid otherTableImg" src="{{ asset(npc.picture) }}" alt="{{ 'image de ' ~ npc.name }}">
												{% endif %}
											{% endfor %}
										{% endif %}

									</td>
								</tr>
							</tbody>
						</table>
						{% if is_granted('ROLE_GAMEMASTER') %}
							<a class='btn btn-warning  m-1' href="{{ path('app_event_edit', {'id': event.id}) }}">Modifier</a>
						{% endif %}
						{% if is_granted('ROLE_ADMIN') %}
							{{ include('event/_delete_form.html.twig') }}
						{% endif %}
						<a class='btn btn-primary  m-1' href="{{ path('app_event_index') }}">Retour Ã  la liste</a>
					</div>
				</div>

			</div>
		</div>

	</div>
{% endblock %}
