{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class='text-center'>
			{% block title %}Liste des Évènement
			{% endblock %}
		</h1>
		<a class='btn btn-primary show' href="{{ path('app_home') }}">Retour à l'Accueil</a>
		{% if is_granted('ROLE_GAMEMASTER') %}
			<a class="mb-2 btn btn-success float-end" href="{{ path('app_event_new') }}">Ajouter un nouveau évènement</a>					
		{% endif %}
		
		<table class="table table-hover mt-4">
			<thead>
				<tr>
					<th>Id</th>
					<th>Titre</th>
					<th>Biome</th>
					<th>Type</th>
					{# <th>Description</th>
					<th>Opening</th> #}
					<th>Image</th>
					<th class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for event in events %}
					<tr>
						<td>{{ event.id }}</td>
						<td>{{ event.title }}</td>
						<td>{{ event.biome.name }}</td>
						<td>{{ event.eventType.name }}</td>
						{# <td>{{ event.description }}</td>
						<td>{{ event.opening }}</td> #}
						<td>
						{% if event.picture %}
							<img class="img-fluid" src="{{ asset(event.picture.path) }}" alt="{{ 'image de ' ~ event.title }}">
						{% endif %}
						</td>
						<td>
							<a class="btn btn-primary float-end  m-1" href="{{ path('app_event_show', {'id': event.id}) }}">Voir</a>
							{% if is_granted('ROLE_GAMEMASTER') %}
								<a class="btn btn-warning float-end  m-1" href="{{ path('app_event_edit', {'id': event.id}) }}">Modifier</a>
								{{ include('event/_delete_form.html.twig') }}
							{% endif %}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">Aucune donnée trouvée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class='navKnp'>
			{{ knp_pagination_render(events) }}
		</div>
	</div>
{% endblock %}
