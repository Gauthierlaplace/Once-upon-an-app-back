{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class='text-center'>
			{% block title %}Liste des Réponses
			{% endblock %}
		</h1>
		<a class='btn btn-primary show' href="{{ path('app_home') }}">Retour à l'Accueil</a>
		<a class="mb-2 btn btn-success float-end" href="{{ path('app_answer_new') }}">Ajouter une nouvelle réponse</a>
		<table class="table table-hover mt-4">
			<thead>
				<tr>
					<th>Id</th>
					<th>Npc - Dialogue</th>
					<th>Réponse</th>
					<th></th>

					<th class="col-md-4 mr-auto text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for answer in answers %}
					<tr>
						<td>{{ answer.id }}</td>
							<td>{{ answer.dialogue.npc.name }} <br> <img class="img-fluid otherTableImg" src="{{ answer.dialogue.npc.picture }}" alt="{{ 'image de ' ~ answer.dialogue.npc.name }}"> <br> {{ answer.dialogue.content }}</td>
						<td>{{ answer.content }}</td>
									<td>{% dump(answer.effect) %}</td>
						<td>
							<a class="btn btn-primary float-end  m-1" href="{{ path('app_answer_show', {'id': answer.id}) }}">Voir</a>
							<a class="btn btn-warning float-end  m-1" href="{{ path('app_answer_edit', {'id': answer.id}) }}">Modifier</a>
							{{ include('answer/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Aucune donnée trouvée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

{% endblock %}
