{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class="text-center">
			{% block title %}
				Réponse :
				{{ answer.id }}
			{% endblock %}
		</h1>
		<div class="row">
			<div class="col-md-8 offset-md-2">
				<div class="card">
					<div class="card-body">
						<table class="table">
							<tbody>
								<tr>
									<th>Id</th>
									<td>{{ answer.id }}</td>
								</tr>
								<tr>
									<th>Npc - dialogue</th>
								<td>{{ answer.dialogue.npc.name }} <br> <img class="img-fluid otherTableImg" src="{{ answer.dialogue.npc.picture }}" alt="{{ 'image de ' ~ answer.dialogue.npc.name }}"> <br> {{ answer.dialogue.content }}</td>
								</tr>
								<tr>
									<th>Réponse</th>
									<td>{{ answer.content }}</td>
								</tr>
								<tr>
									<th>Effet</th>
									{% if effects %}
									{% for effect in effects %}
									<td>
											{{effect.name}}
											<br>
									</td>
										{% endfor %}
										{% else %}
										<td></td>
										
									{% endif %}
								</tr>


							</tbody>
						</table>
						<a class='btn btn-warning  m-1' href="{{ path('app_answer_edit', {'id': answer.id}) }}">Modifier</a>
						{{ include('answer/_delete_form.html.twig') }}
						<a class='btn btn-primary  m-1' href="{{ path('app_answer_index') }}">Retour à la liste</a>

					</div>
				</div>

			</div>
		</div>

	</div>
{% endblock %}
