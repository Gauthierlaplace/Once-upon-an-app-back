{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class="text-center">
			{% block title %}
				{{ review.title }}
			{% endblock %}
		</h1>
		<div class="row">
			<div class="col-md-8 offset-md-2">
				<div class="card">
					<div class="card-body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ review.id }}</td>
            </tr>
             <tr>
                <th>Utilisateur</th>
                <td>{{ review.user.pseudo}}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ review.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ review.content }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ review.rating }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ review.createdAt ? review.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ review.updatedAt ? review.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    {% if is_granted('ROLE_GAMEMASTER') %}
        <a class='btn btn-warning  m-1' href="{{ path('app_review_edit', {'id': review.id}) }}">Modifier</a>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
        {{ include('review/_delete_form.html.twig') }}
    {% endif %}
						<a class='btn btn-primary  m-1' href="{{ path('app_review_index') }}">Retour à la liste</a>

					</div>
				</div>

			</div>
		</div>

	</div>
{% endblock %}
