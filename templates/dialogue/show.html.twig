{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class="text-center">
			{% block title %}
				Dialogue :
				{{ dialogue.id }}
			{% endblock %}
		</h1>
		<div class="row">
			<div class="col-md-8 offset-md-2">
				<div class="card">
					<div class="card-body">
						<table class="table">
							<tbody>
								<tr>
									<th>Id</th>
									<td>{{ dialogue.id }}</td>
								</tr>
								<tr>
									<th>Npc</th>
									<td>{{ dialogue.npc.name }}
										{% if dialogue.npc.picture %}
											<br>
											<img class="img-fluid otherTableImg" src="{{ asset(dialogue.npc.picture) }}" alt="{{ 'image de ' ~ dialogue.npc.name }}"></td>
									{% endif %}
								</tr>
								<tr>
									<th>Contenu</th>
									<td>{{ dialogue.content }}</td>
								</tr>
							</tbody>
						</table>
						{% if is_granted('ROLE_GAMEMASTER') %}
							<a class='btn btn-warning  m-1' href="{{ path('app_dialogue_edit', {'id': dialogue.id}) }}">Modifier</a>
						{% endif %}
						{% if is_granted('ROLE_ADMIN') %}
							{{ include('dialogue/_delete_form.html.twig') }}
						{% endif %}
						<a class='btn btn-primary  m-1' href="{{ path('app_dialogue_index') }}">Retour Ã  la liste</a>

					</div>
				</div>

			</div>
		</div>

	</div>
{% endblock %}
