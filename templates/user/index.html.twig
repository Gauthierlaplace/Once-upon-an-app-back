{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class='text-center'>
			{% block title %}Liste des Utilisateurs
			{% endblock %}
		</h1>
		<a class='btn btn-primary show' href="{{ path('app_home') }}">Retour à l'Accueil</a>
		<a class="mb-2 btn btn-success float-end" href="{{ path('app_user_new') }}">Ajouter un nouveau utilisateur
		</a>
		<table class="table tabletest table-hover mt-4">
			<thead>
				<tr>
					<th>Id</th>
					<th>Email</th>
					<th>Rôles</th>
					<th>Pseudo</th>
					<th>Avatar</th>
					<th class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
						<td>{{ user.pseudo }}</td>
						<td>
						{% if user.avatar %}
						<img class="img-fluid otherTableImg" src="{{ asset(user.avatar)  }}" alt="{{ 'image de ' ~ user.pseudo }}">
						{% endif %}
						</td>
						<td>
							<a class="btn btn-primary float-end m-1" href="{{ path('app_user_show', {'id': user.id}) }}">Voir</a>
							<a class="btn btn-warning float-end m-1" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
							{{ include('user/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="7">Aucune donnée trouvée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
