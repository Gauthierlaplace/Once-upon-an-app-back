<form method="post" action="{{ path('app_picture_delete', {'id': picture.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ picture.id) }}">
	{% set isIndex = (app.request.attributes.get("_route") starts with "app_picture_index") %}
	{% if isIndex %}
		<button class="btn btn-danger float-end m-1 responsiveDisplayOff">Supprimer</button>
	{% else %}
		<button class="btn btn-danger float-end m-1">Supprimer</button>
	{% endif %}
</form>
