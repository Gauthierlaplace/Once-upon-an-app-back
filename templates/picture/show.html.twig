{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class="text-center">
			{% block title %}
				{{ picture.name }}
			{% endblock %}
		</h1>
		<div class="row">
			<div class="col-md-8 offset-md-2">
				<div class="card">
					<div class="card-body">
						<table class="table">
							<tbody>
								<tr>
									<th>Id</th>
									<td>{{ picture.id }}</td>
								</tr>
								<tr>
									<th>Nom</th>
									<td>{{ picture.name }}</td>
								</tr>
								<tr>
									<th>Base64</th>
									<td>{{ picture.base64 }}</td>
								</tr>
								<tr>
									<th>Chemin</th>
									<td>{{ picture.path }}</td>
								</tr>
								<tr>
									<th>Image</th>
									<td><img class="img-fluid" src="{{ asset(picture.path) }}" alt="{{ 'image de ' ~ picture.name }}"></td>
								</tr>
							</tbody>
						</table>
						{% if is_granted('ROLE_GAMEMASTER') %}
							<a class='btn btn-warning  m-1' href="{{ path('app_picture_edit', {'id': picture.id}) }}">Modifier</a>
						{% endif %}
						{% if is_granted('ROLE_ADMIN') %}
							{{ include('picture/_delete_form.html.twig') }}
						{% endif %}
						<a class='btn btn-primary  m-1' href="{{ path('app_picture_index') }}">Retour Ã  la liste</a>

					</div>
				</div>

			</div>
		</div>

	</div>
{% endblock %}
