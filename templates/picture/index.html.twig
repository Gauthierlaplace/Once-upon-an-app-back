{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class='text-center'>
			{% block title %}Liste des Images
			{% endblock %}
		</h1>
		<a class='btn btn-primary show' href="{{ path('app_home') }}">Retour à l'Accueil</a>
		{% if is_granted('ROLE_GAMEMASTER') %}
			<a class="mb-2 btn btn-success float-end" href="{{ path('app_picture_new') }}">Ajouter une nouvelle image</a>
		{% endif %}
		<table class="table table-hover mt-4">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Base64</th>
					<th>Chemin</th>
					<th>Image</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for picture in pictures %}
					<tr>
						<td>{{ picture.id }}</td>
						<td>{{ picture.name }}</td>
						<td>{{ picture.base64 }}</td>
						<td>{{ picture.path }}</td>
						<td><img class="img-fluid otherTableImg" src="{{ asset(picture.path) }}" alt="{{ 'image  ' ~ picture.name }}"></td>
						<td>
							<a class="btn btn-primary float-end  m-1" href="{{ path('app_picture_show', {'id': picture.id}) }}">Voir</a>
							{% if is_granted('ROLE_GAMEMASTER') %}
								<a class="btn btn-warning float-end  m-1" href="{{ path('app_picture_edit', {'id': picture.id}) }}">Modifier</a>
								{{ include('picture/_delete_form.html.twig') }}
							{% endif %}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Aucune donnée trouvée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
