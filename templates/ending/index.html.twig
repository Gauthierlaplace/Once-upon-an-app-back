{% extends 'base.html.twig' %}

{% block body %}
	<div class="container my-4">
		<h1 class='text-center'>
			{% block title %}Liste des Endings
			{% endblock %}
		</h1>
		<a class='btn btn-primary show' href="{{ path('app_home') }}">Retour à l'Accueil</a>
		<a class="mb-2 btn btn-success float-end" href="{{ path('app_ending_new') }}">Ajouter un nouveau ending</a>
		<table class="table table-hover mt-4">
			<thead>
				<tr>
					<th>Id</th>
					<th>Evénement</th>
					<th>Contenu</th>
					<th>Vers Type</th>
					<th class="text-center">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for ending in endings %}
					<tr>
						<td>{{ ending.id }}</td>
						<td>{{ ending.event.title }} 
						{% if ending.event.picture %}							
						<br>
						 <img class="img-fluid otherTableImg" src="{{ asset(ending.event.picture) }}" alt="{{ 'image de ' ~ ending.event.title }}"></td>
						{% endif %}
						<td>{{ ending.content }}</td>
						<td>{{ ending.eventType.name }}</td>
						<td>

							<a class="btn btn-primary float-end  m-1" href="{{ path('app_ending_show', {'id': ending.id}) }}">Voir</a>
							<a class="btn btn-warning float-end  m-1" href="{{ path('app_ending_edit', {'id': ending.id}) }}">Modifier</a>
							{{ include('ending/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">Aucune donnée trouvée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
