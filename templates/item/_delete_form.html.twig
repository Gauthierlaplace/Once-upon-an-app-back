<form method="post" action="{{ path('app_item_delete', {'id': item.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
    {% set isIndex = (app.request.attributes.get("_route") starts with "app_item_index") %}
	{% if isIndex %}
		<button class="btn btn-danger float-end m-1 responsiveDisplayOff">Supprimer</button>
	{% else %}
		<button class="btn btn-danger float-end m-1">Supprimer</button>
	{% endif %}
</form>
